{% extends 'base.html.twig' %}

{% block title %}Yarn index{% endblock %}

{% block body %}
    <h1>Yarn index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Weight</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for yarn in yarns %}
            <tr>
                <td>{{ yarn.id }}</td>
                <td>{{ yarn.name }}</td>
                <td>{{ yarn.weight }}</td>
                <td>
                    <a href="{{ path('yarn_show', {'id': yarn.id}) }}">show</a>
                    <a href="{{ path('yarn_edit', {'id': yarn.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('yarn_new') }}">Create new</a>
{% endblock %}
