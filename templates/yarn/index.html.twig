{% extends 'base.html.twig' %}

{% block title %}Liste des fils{% endblock %}

{% block body %}
    <div class="p-5">
        <h1 class="text-center">fils</h1>
        <a class="btn btn-outline-primary" href="{{ path('yarn_new') }}">Ajouter</a>
        {% if yarns %}
            <table class="table table-hover mt-5">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th class="text-right">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for yarn in yarns %}
                    <tr>
                        <td>{{ yarn.name }}</td>
                        <td class="text-right">
                            {{ include('yarn/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p class="mt-5">Aucun fil retrouv√©</p>
        {% endif %}
    </div>
{% endblock %}
