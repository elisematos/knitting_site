<form method="post" action="{{ path('pattern_delete', {'id': pattern.id}) }}" onsubmit="return confirm('Voulez-vous réellement supprimer cet élément?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pattern.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
