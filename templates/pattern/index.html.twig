{% extends 'base.html.twig' %}

{% block title %}Catalogue des patrons{% endblock %}

{% block body %}
    <div class="p-5">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        <a class="btn btn-info" href="{{ path('pattern_new') }}">Ajouter un nouveau patron</a>
        {% if patterns %}
            <div class="mt-5 container-fluid">
                <div class="row">
                    {% for pattern in patterns %}
                    <div class="col-sm-6 col-md-3 col-lg-3">

                <div class="card text-center">
                    <a style="color:black; text-underline-style: none" href="{{ path('pattern_show', {'id': pattern.id}) }}">
                        {% for image in pattern.images %}
                            {% if loop.first %}
                                <img src="{{ asset('uploads/images/' ~ image.name) }}"
                                     class="card-img-top"
                                     alt="#">
                            {% endif %}
                        {% endfor %}
                    </a>
                        <div class="card-body ">
                                <h3 class="card-title">{{ pattern.category.name }} {{ pattern.name }}</h3>
                                {{ include('pattern/_delete_form.html.twig') }}
                                <a href="{{ path('pattern_edit', {'id': pattern.id}) }}">
                                    <img src="/uploads/icons/pencil.png" alt="delete_icon" width="25">
                                </a>
                        </div>
                </div>

                </div>
                    {% endfor %}
            </div>
            </div>
        {% else %}
            <p>Aucun patron Ã  afficher</p>
        {% endif %}
    </div>
{% endblock %}
