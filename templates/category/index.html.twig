{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <div class="p-5">
    <h1 class="text-center">catégories</h1>
    <a class="btn btn-outline-primary" href="{{ path('category_new') }}">Ajouter</a>
    {% if categories %}
        <table class="table table-hover mt-5">
            <thead>
            <tr>
                <th>Nom</th>
                <th class="text-right">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.name }}</td>
                    <td class="text-right">
                        {{ include('category/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="mt-5">Aucune categorie retrouvée</p>
    {% endif %}
    </div>
{% endblock %}
